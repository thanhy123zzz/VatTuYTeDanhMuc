
@{
    webContext context = new webContext();
    NhanVien getNhanVien(int? id){
        NhanVien nv = context.NhanVien.Find(id);
        if (nv != null) return nv;
        else return new NhanVien();
    }
    List<Dvt> getListDVT(){
        return context.Dvt.Where(x=>x.Active == true).ToList();
    }
}

<div class="card">
        <div class="card-body">
            <div class="row">
                <div style="display:flex; justify-content:end;margin-bottom:7px">
                    <a href="/DonViTinh/ViewInsertDVT" style="width:20%" class="btn btn-secondary">Thêm mới</a></div>
            </div>
            <table id="tableDonViTinh" >
                <thead>
                    <tr>
                        <th>Mã đơn vị tính</th>
                        <th>Tên đơn vị tính</th>
                        <th>Nhân viên tạo</th>
                        <th>Ngày tạo</th>
                        <th>Nhân viên sửa</th>
                        <th>Ngày sửa</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Dvt dvt in getListDVT()){
                    <tr>
                        <td>@dvt.MaDvt</td>
                        <td>@dvt.TenDvt</td>
                        <td>@getNhanVien(@dvt.Nvtao).TenNv</td>
                        <td>@dvt.NgayTao</td>
                        <td>@getNhanVien(@dvt.Nvsua).TenNv</td>
                        <td>@dvt.NgaySua</td>
                        <td>
                                <a href="/NuocSanXuat/ViewUpdateDVT/@dvt.Id">
                                <i
                                  class="bi bi-pencil-square"
                                  style="margin-right: 10px; margin-left: 10px"
                                ></i>
                              </a>
                               <a href="/DonViTinh/xoa/@dvt.Id" onclick="return confirm('Bạn có xoá đơn vị tính này?')">
                                <i
                                  class="bi bi-trash"
                                  style="margin-right: 10px; margin-left: 10px"
                                ></i>
                              </a>
                              <a href="Phieunhap.html"> Xem </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
       </div>