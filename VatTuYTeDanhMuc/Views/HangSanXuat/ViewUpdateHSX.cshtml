@model VatTuYTeDanhMuc.Models.Entities.HangSanXuat
@{

}

<div class="card">
            <div class="card-body"  >
                    <form action="/HangSanXuat/UpdateHSX" method="post">
                        <div class="forms-header text-center">						
                            <h4 class="forms-title "><b>@ViewData["Title"]</b></h4>
                        </div>
                        <div class="forms-body">		
                          <div class="form-group">
                            <label style="margin:7px 0;">Mã hãng sản xuất</label>
                            <input asp-for="@Model.MaHsx" type="text" class="form-control" required>
                            <input asp-for="@Model.Id" type="hidden" class="form-control" required>
                          </div>
                          <div class="form-group">
                              <label style="margin:7px 0;">Tên hãng sản xuất</label>
                              <input asp-for="@Model.TenHsx" type="text" class="form-control" required>
                          </div>
                        </div>
                         <div class="forms-footer" style="justify-content:space-between">        
                            <button class="btn btn-secondary" onclick="window.history.go(-1);">
                                Quay lại
                                </button>
                            <input type="submit" class="btn btn-primary" value="Sửa">
                        </div>
                    </form>

            </div>
        </div>