@model VatTuYTeDanhMuc.Models.Entities.NhaCungCap
@{
  webContext context = new webContext();
  NhanVien getNhanVien(int? id)
  {
    NhanVien nv = context.NhanVien.Find(id);
    if (nv != null) return nv;
    else return new NhanVien();
  }
  List<NhaCungCap> getListNCC()
  {
    return context.NhaCungCap.Where(x => x.Active == true).ToList();
  }
  string formatDay(DateTime? date)
  {
    if (date != null)
    {
      return date.Value.ToString("dd/MM/yyyy HH:mm");
    }
    else
    {
      return null;
    }
  }


  var acc = User.FindFirst("VaiTro");

  int idmenu = (int)TempData.Peek("Menu");

  int idUser = int.Parse(User.Claims.ElementAt(2).Type);

  string vaitro = null;
  bool nhap = false, sua = false, xoa = false, print = false, xuat = false, canhan = false;
  if (acc != null)
  {
    vaitro = acc.Value;
    if (vaitro != null && vaitro != "")
    {
      ChucNang cn = context.ChucNang.FirstOrDefault(c => c.Idvt.Equals(int.Parse(vaitro)) && c.Idmenu.Equals(idmenu));
      nhap = (bool)cn.Nhap;
      sua = (bool)cn.Sua;
      xoa = (bool)cn.Xoa;
      print = (bool)cn.In;
      xuat = (bool)cn.Xuat;
      canhan = (bool)cn.CaNhan;
    }
  }


}
@if (TempData["ThongBao"] != null)
{
  <script type="text/javascript" charset="utf-8">
                            window.onload = function () {
                                alert("@Html.Raw(@TempData["ThongBao"])");
                        };
  </script>
}

<div class="card pt-3">
  <div class="card-body">
    <div style="margin-bottom: -40px; position:absolute; z-index:1;display:flex;">
      @if (nhap == true)
      {
        <a href="/NhaCungCap/ViewInsertNCC" class="btn btn-secondary">
          <span>Thêm Mới</span>
        </a>
      }
      else
      {
        <button class="btn btn-secondary disabled"><span>Thêm mới</span></button>
      }
      <div class="dropdown" style="margin-left: 20px">
        <select id="active" class="form-select">
          <option value="true" selected>Hiện tại</option>
          <option value="false">Tất cả</option>
        </select>
      </div>
    </div>
    <table id="example" class="table table-striped  table-hover text-center display nowrap" style="width:100%">
      <thead>
        <tr>
          <th class="text-center">Mã NCC</th>
          <th class="text-center">Tên NCC</th>
          <th class="text-center">Địa chỉ</th>
          <th class="text-center"> SĐT</th>
          <th class="text-center">Email</th>
          <th class="text-center">NV tạo</th>
          <th class="text-center">Ngày tạo</th>
          <th class="text-center">NV sửa</th>
          <th class="text-center">Ngày sửa</th>
          <th class="text-center">Tùy chọn</th>
        </tr>
      </thead>

      <tbody>
        @foreach (NhaCungCap item in getListNCC())
        {
          <tr>
            <td>@item.MaNcc</td>
            <td>@item.TenNcc</td>
            <td>@item.DiaChi</td>
            <td>@item.Sdt</td>
            <td>@item.Email</td>
            <td>@getNhanVien(@item.Nvtao).TenNv</td>
            <td>@formatDay(@item.NgayTao)</td>
            <td>@getNhanVien(@item.Nvsua).TenNv</td>
            <td>@formatDay(@item.NgaySua)</td>
            <td>
              @if (sua == true)
              {
                <a href="/NhaCungCap/ViewUpdate/@item.Id">
                  <i class="bi bi-pencil-square" style="margin-right: 10px; margin-left: 10px"></i>
                </a>
              }
              else
              {
                <button class=" btn p-0 disabled border-0">
                  <i class="bi bi-pencil-square" style="margin-right: 10px; margin-left: 10px"></i>
                </button>
              }
              @if (xoa == true)
              {

                <a href="/NhaCungCap/Delete/@item.Id" onclick="return confirm('Bạn có xoá đơn vị tính này?')">
                  <i class="bi bi-trash" style="margin-right: 10px; margin-left: 10px"></i>
                </a>
              }
              else
              {
                <button class=" btn p-0 disabled border-0">
                  <i class="bi bi-trash" style="margin-right: 10px; margin-left: 10px"></i>
                </button>
              }
            </td>
          </tr>
        }



      </tbody>
    </table>
  </div>
</div>
<script>
  $('#active').on('change', function () {
    var a = $(this).val();
    $.ajax({
      type: "post",
      url: "/loadTableNCC",
      data: "active=" + a,
      success: function (result) {
        $('#example_wrapper').replaceWith(result);
      },
      error: function () {
        alert("Fail to delete");
      }
    });
  });
</script>
