@model VatTuYTeDanhMuc.Models.Entities.PhieuNhap
@{
    Layout = null;
    webContext context = new webContext();
    var ListCTPNT = Model.ChiTietPhieuNhap.ToList();
    var TienHang = ListCTPNT.Sum(x => x.Slg * x.DonGia);
    var TienCK = ListCTPNT.Sum(x => (x.Slg * x.DonGia * x.Cktm) / 100);
    var TienThue = ListCTPNT.Sum(x => (((x.Slg * x.DonGia) - ((x.Slg * x.DonGia * x.Cktm) / 100)) * x.Thue) / 100);
    var TienThanhToan = TienHang - TienCK + TienThue;
    HangHoa getHH(int? id){

        return context.HangHoa.Find(id);
    }
    Dvt getDVt(int? id){
        return context.Dvt.Find(id);
    }

    string toDecimal(double? d){
        return d.Value.ToString("#,##0.00");
    }
    string toDecimal2(double? d){
        return d.Value.ToString("#,##0");
    }
    TtdoanhNghiep dn = context.TtdoanhNghiep.Find(1);
}
<!DOCTYPE html>
<html lang="en">
