@model PhieuNhapKhoModel
@{
    webContext context = new webContext();

    List<NhaCungCap> getListNCC(){
        return context.NhaCungCap.ToList();
    }

    List<HangHoa> getListHH(){
        return context.HangHoa.ToList();
    }
}

<div class="card">
    <div class="card-body">

        <!-- Bordered Tabs Justified -->
        <ul class="nav nav-tabs nav-tabs-bordered d-flex" id="borderedTabJustified" role="tablist">
            <li class="nav-item flex-fill" role="presentation">
                <button class="nav-link w-100 active" id="home-tab" data-bs-toggle="tab" data-bs-target="#bordered-justified-home" type="button" role="tab" aria-controls="home" aria-selected="true">Phiếu nhập kho</button>
            </li>
            <li class="nav-item flex-fill" role="presentation">
                <button class="nav-link w-100" id="profile-tab" data-bs-toggle="tab" data-bs-target="#bordered-justified-profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Nội dung phiếu nhập</button>
            </li>

        </ul>
        <div class="tab-content pt-2" id="borderedTabJustifiedContent">
            <form action="/them-phieu-nhap" enctype="multipart/form-data" method="post" class="tab-pane fade show active" id="bordered-justified-home" role="tabpanel" aria-labelledby="home-tab">
                <div class="form-group  p-2 mb-2" style="border-radius: 5px; border: 1px solid #ced4da;">
                    <div class="row mb-3">
                        <label class="col-sm-2 col-lg-2 col-form-label">Số phiếu</label>
                        <div class="col-sm-4 col-lg-4">
                            <input type="text" class="form-control" name="@nameof(Model.phieuNhap.SoHd)" id="inputText">
                        </div>
                        <label class="col-sm-2 col-lg-2 col-form-label">Ngày nhập</label>
                        <div class="col-sm-4 col-lg-4">
                            <input type="date" name="@nameof(Model.phieuNhap.NgayTao)" class="form-control dnow" value="@DateTime.Now.ToString("yyyy-MM-dd")" id="inputText">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-lg-2 col-form-label">Nhà cung cấp</label>
                        <div class="col-sm-9 col-lg-10">
                            <select name="@nameof(Model.phieuNhap.Idncc)" id="inputState" class="form-select">
                                @foreach(NhaCungCap n in getListNCC()){
                                    <option value="@n.MaNcc">@n.TenNcc</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-lg-2 col-form-label">Số hóa đơn</label>
                        <div class="col-sm-4 col-lg-4">
                            <input type="text" name="@nameof(Model.phieuNhap.SoHd)" class="form-control" id="inputText">
                        </div>
                        <label class="col-sm-2 col-lg-2 col-form-label">Ngày hóa đơn</label>
                        <div class="col-sm-2 col-lg-4">
                            <input type="date" name="@nameof(Model.phieuNhap.NgayHd)" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" id="inputText">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-lg-2 col-form-label">Ghi chú</label>
                        <div class="col-sm-9 col-lg-10">
                            <textarea name="@nameof(Model.phieuNhap.GhiChu)" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
                <div class="form-group p-2" style="border-radius: 5px; border: 1px solid #ced4da;">
                    <div class="row mb-3" style="--bs-gutter-x: 0">
                        <div class="col-md-3 mb-2 col-lg-3">
                            <div class="form-floating">
                                <select id="inputState" class="form-select">
                                    @foreach(HangHoa h in getListHH()){
                                        <option value="@h.Id">@h.TenHh</option>
                                    }
                                </select>
                                <label for="floatingName">Tên biệt dược, hàng hóa</label>
                            </div>
                        </div>
                        <div class="col-md-1 mb-2 col-lg-1">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="floatingName" placeholder="Your Name">
                                <label for="floatingName">ĐVT</label>
                            </div>
                        </div>
                        <div class="col-md-2 mb-2 col-lg-2">
                            <div class="form-floating">
                                <select id="inputState" class="form-select">
                                    <option selected="">Choose...</option>
                                    <option>...</option>
                                </select>
                                <label for="floatingName">Số lô</label>
                            </div>
                        </div>
                        <div class="col-md-2 mb-2 col-lg-2">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="floatingName" placeholder="Your Name">
                                <label for="floatingName">Số lượng</label>
                            </div>
                        </div>
                        <div class="col-md-2 mb-2 col-lg-2">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="floatingName" placeholder="Your Name">
                                <label for="floatingName">Đơn giá</label>
                            </div>
                        </div>
                        <div class="col-md-2 mb-2 col-lg-2">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="floatingName" placeholder="Your Name">
                                <label for="floatingName">Thành tiền</label>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3" style="--bs-gutter-x: 0">

                        <div class="col-md-1 mb-2 col-lg-1">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="floatingName" placeholder="Your Name">
                                <label for="floatingName">%CK</label>
                            </div>
                        </div>
                        <div class="col-md-2 mb-2 col-lg-2">
                            <div class="form-floating">
                                <input type="date" class="form-control" id="floatingName" placeholder="Your Name">
                                <label for="floatingName">Hạn dùng</label>
                            </div>
                        </div>
                        <div class="col-md-2 mb-2 col-lg-2">
                            <div class="form-floating">
                                <input type="date" class="form-control" id="floatingName" placeholder="Your Name">
                                <label for="floatingName">Ngày SX</label>
                            </div>
                        </div>
                        <div class="col-md-2 mb-2 col-lg-2">
                            <div class="form-floating">
                                <select id="inputState" class="form-select">
                                    <option selected="">Choose...</option>
                                    <option>...</option>
                                </select>
                                <label for="floatingName">Thuế suất</label>
                            </div>
                        </div>
                        <div class="col-md-2 mb-2 col-lg-2">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="floatingName" placeholder="Your Name">
                                <label for="floatingName">Giá bán</label>
                            </div>
                        </div>
                        <div class="col-md-2 mb-2 col-lg-2">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="floatingName" placeholder="Your Name">
                                <label for="floatingName">Giá nhập</label>
                            </div>
                        </div>
                        <div class="col-md-1 mb-2 col-lg-1" style="display: flex;">
                            <button class="btn btn-primary" type="submit" style="margin-left: 20px;">Thêm </button>
                        </div>
                    </div>
                </div>
            </form>
