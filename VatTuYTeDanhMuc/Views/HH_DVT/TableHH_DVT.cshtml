<script>

    function loadTableHangHoa(){
        var nhomHH = $('#nhomHH').val();
        $.ajax({
            type: "post",
            url: "/loadTableHangHoa",
            data: "nhomHH=" + nhomHH,
            success: function (result) {
                $('#tbodyHH').replaceWith(result);
            },
            error: function () {
                alert("Fail");
            }
        });
    }

    function loadTableHH_DVT(id){
        $('#idHH').val(id);
        $.ajax({
            type: "post",
            url: "/loadTableHH_DVT",
            data: "idHH=" + id,
            success: function (result) {
                $('#tbodyHH_DVT').replaceWith(result);  
            },
            error: function () {
                alert("Fail");
            }
        });
    }
</script>