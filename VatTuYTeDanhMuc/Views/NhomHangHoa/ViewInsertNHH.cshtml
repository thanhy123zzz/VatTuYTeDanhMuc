@model VatTuYTeDanhMuc.Models.Entities.NhomHangHoa
@{

}

<div class="card">
            <div class="card-body"  >
                    <form action="/NhomHangHoa/InsertNHH" method="post">
                        <div class="modal-header text-center">						
                            <h4 class="modal-title "><b>Thêm nhóm hàng hóa</b></h4>
                        </div>
                        <div class="modal-body">		
                          <div class="form-group">
                            <label style="margin:7px 0;">Mã nhóm hàng hóa</label>
                            <input asp-for="@Model.MaNhh" type="text" class="form-control" required>
                          </div>
                          <div class="form-group">
                              <label style="margin:7px 0;">Tên nhóm hàng hóa</label>
                              <input asp-for="@Model.TenNhh" type="text" class="form-control" required>
                          </div>
                        </div>
                        <div class="modal-footer" style="justify-content:space-between">        
                            <button class="btn btn-secondary" onclick="window.history.go(-1);">
                                Quay lại
                                </button>
                            <input type="submit" class="btn btn-primary" value="Thêm">
                        </div>
                    </form>

            </div>
        </div>