@model VatTuYTeDanhMuc.Models.Entities.KhachHang
@{
    webContext context = new webContext();
    NhanVien getNhanVien(int? id)
    {
        NhanVien nv = context.NhanVien.Find(id);
        if (nv != null) return nv;
        else return new NhanVien();
    }
    List<KhachHang> getListKH()
    {
        return context.KhachHang.Where(x => x.Active == true).ToList();
    }
}
<h1>Danh mục khách hàng</h1>
<div class="card">
        <div class="card-body">
            <div class="row">
                <div style="display:flex; justify-content:end;margin-bottom:7px">
                    <a href="/KhachHang/ViewInsertKH" style="width:20%" class="btn btn-secondary">Thêm mới</a></div>
            </div>
            <table id="tableKhachHang">
                <thead>
                    <tr>
                        <th class="text-center">ID</th>
                        <th class="text-center" style="Width:50px">Mã KH</th> 
                        <th class="text-center">Tên KH</th>
                        <th class="text-center">Địa chỉ</th>
                        <th class="text-center">SĐT</th>
                        <th class="text-center">Email</th>
                        <th class="text-center">Mã số thuế</th>
                        <th class="text-center">Ghi chú</th>
                        <th class="text-center">NV sale</th>
                        <th class="text-center">Tên tài khoản</th>
                        <th class="text-center">NV tạo</th>
                        <th class="text-center">Ngày tạo</th>
                        <th class="text-center">NV sửa</th>
                        <th class="text-center">Ngày sửa</th>
                        

                        <th class="text-center">Tùy chọn</th>
                    </tr>
                </thead>
                <tbody>
                    
                @foreach (KhachHang item in getListKH())
                {


                            <tr>
                                    <td>@item.Id</td>
                                        <td>@item.MaKh</td>
                                        <td>@item.TenKh</td>
                                        <td>@item.DiaChi</td>
                                        <td>@item.Sdt</td>
                                        <td>@item.Email</td>
                                        <td>@item.MaSoThue</td>
                                        <td>@item.GhiChu</td>
                                        <td>@getNhanVien(item.Nvsale).TenNv</td>
                                        <td>@item.TenTaiKhoan</td>
                                        <td>@getNhanVien(@item.Nvtao).TenNv</td>
                                        <td>@item.NgayTao</td>
                                        <td>@getNhanVien(@item.Nvsua).TenNv</td>
                                        <td>@item.NgaySua</td>

                                <td>
                                             <a href="/Khachhang/Update/@item.Id">
                                            <i
                                  class="bi bi-pencil-square"
                                  style="margin-right: 10px; margin-left: 10px"
                                ></i>
                                          </a>
                                                       <a href="/KhachHang/Delete/@item.Id" onclick="return confirm('Bạn có xoá khách hàng này?')">
                                            <i
                                  class="bi bi-trash"
                                  style="margin-right: 10px; margin-left: 10px"
                                ></i>
                                          </a>
                                          <a href="Phieunhap.html"> Xem </a>
                                </td>
                            </tr>
                }



                </tbody>
            </table>
        </div>
       </div>
